<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="213.16dp">

    <ImageView
            android:id="@+id/image_photo"
            android:layout_width="132dp"
            android:layout_height="133.16dp"
            android:layout_marginEnd="67dp"
            android:background="@drawable/bg_rectangle_radius_16dp"
            android:backgroundTint="@color/gray_4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textSize="16sp"
            android:text="--"
            app:layout_constraintTop_toBottomOf="@id/image_photo"
            app:layout_constraintStart_toStartOf="@id/image_photo"
            app:layout_constraintEnd_toEndOf="@id/image_photo"
            tools:text="Die Antwoord"/>

    <TextView
            android:id="@+id/text_town"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:text="--"
            app:layout_constraintTop_toBottomOf="@id/text_title"
            app:layout_constraintStart_toStartOf="@id/image_photo"
            app:layout_constraintEnd_toEndOf="@id/image_photo"
            tools:text="Будапешт"/>

    <ImageView
            android:id="@+id/image_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_air_24dp"
            app:tint="@color/gray_6"
            app:layout_constraintTop_toBottomOf="@id/text_town"
            app:layout_constraintStart_toStartOf="@id/image_photo"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="--"
            app:layout_constraintStart_toEndOf="@id/image_price"
            app:layout_constraintTop_toTopOf="@id/image_price"
            app:layout_constraintBottom_toBottomOf="@id/image_price"
            tools:text="от 22 264 ₽"/>

</androidx.constraintlayout.widget.ConstraintLayout>