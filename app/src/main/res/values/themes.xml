<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.TestTask_TicketsSearch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <!-- Background main color. -->
        <item name="android:background">@color/app_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:attr/background</item>
        <!-- Bottom navigation view style. -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <!-- Base text color. -->
        <item name="android:textColor">@color/item_inactive</item>
    </style>

    <!-- Widget colors. -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="itemRippleColor">@null</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/item_active</item>
        <item name="colorOnSurface">@color/item_inactive</item>
    </style>

</resources>