<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_rectangle_radius_medium"
        android:backgroundTint="@color/gray_2">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/bg_dialog_indicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!--  Search views START  -->

    <ImageView
            android:id="@+id/image_search_background"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_marginTop="45dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_rectangle_radius_medium"
            android:backgroundTint="@color/gray_3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:id="@+id/image_plane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/ic_plane_24dp"
            app:layout_constraintTop_toTopOf="@+id/image_search_background"
            app:layout_constraintStart_toStartOf="@+id/image_search_background"
            app:layout_constraintEnd_toStartOf="@+id/text_place_departure"/>

    <TextView
            android:id="@+id/text_place_departure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:background="@color/transparent"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@+id/image_search_background"
            app:layout_constraintStart_toEndOf="@+id/image_plane"
            app:layout_constraintEnd_toEndOf="@id/image_search_separator"
            tools:text="Место отправления"/>

    <ImageView
            android:id="@+id/image_search_separator"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginVertical="48dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_separator"
            android:backgroundTint="@color/gray_4"
            app:layout_constraintTop_toTopOf="@+id/image_search_background"
            app:layout_constraintStart_toStartOf="@+id/image_search_background"
            app:layout_constraintEnd_toEndOf="@+id/image_search_background"/>

    <ImageView
            android:id="@+id/image_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/ic_search_24dp"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toTopOf="@+id/image_search_background"
            app:layout_constraintStart_toStartOf="@+id/image_search_background"
            app:layout_constraintEnd_toStartOf="@id/action_place_arrival"/>

    <EditText
            android:id="@+id/action_place_arrival"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:layout_marginStart="8dp"
            android:background="@color/transparent"
            android:hint="@string/action_place_arrival"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@+id/image_search_background"
            app:layout_constraintStart_toEndOf="@+id/image_search"
            app:layout_constraintEnd_toStartOf="@id/action_cleaning_place_arrival"/>

    <ImageView
            android:id="@+id/action_cleaning_place_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:layout_marginStart="288dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/ic_close_24dp"
            android:backgroundTint="@color/gray_6"
            app:layout_constraintStart_toStartOf="@id/image_search_background"
            app:layout_constraintTop_toTopOf="@id/image_search_background"
            app:layout_constraintEnd_toEndOf="@id/image_search_background"/>

    <!--  Search views END  -->

    <!--  Hint buttons START  -->

    <ImageButton
            android:id="@+id/action_hint_route"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="165dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/bg_rectangle_radius_small"
            android:backgroundTint="@color/light_green"
            android:src="@drawable/ic_route_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/action_hint_where"
            app:layout_constraintHorizontal_chainStyle="spread"/>

    <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:background="@color/transparent"
            android:text="Сложный маршрут"
            android:textSize="14sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/action_hint_route"
            app:layout_constraintTop_toBottomOf="@id/action_hint_route"
            app:layout_constraintEnd_toEndOf="@id/action_hint_route"/>

    <ImageButton
            android:id="@+id/action_hint_where"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="165dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/bg_rectangle_radius_small"
            android:backgroundTint="@color/blue"
            android:src="@drawable/ic_ball_24dp"
            app:layout_constraintStart_toEndOf="@id/action_hint_route"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/action_hint_weekend"
            app:layout_constraintHorizontal_chainStyle="spread"/>

    <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:background="@color/transparent"
            android:text="Куда угодно"
            android:textSize="14sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/action_hint_where"
            app:layout_constraintTop_toBottomOf="@id/action_hint_where"
            app:layout_constraintEnd_toEndOf="@id/action_hint_where"/>

    <ImageButton
            android:id="@+id/action_hint_weekend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="165dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/bg_rectangle_radius_small"
            android:backgroundTint="@color/dark_blue"
            android:src="@drawable/ic_calendar_24dp"
            app:layout_constraintStart_toEndOf="@id/action_hint_where"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/action_hint_hot_tickets"
            app:layout_constraintHorizontal_chainStyle="spread"/>

    <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:background="@color/transparent"
            android:text="Выходные"
            android:textSize="14sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/action_hint_weekend"
            app:layout_constraintTop_toBottomOf="@id/action_hint_weekend"
            app:layout_constraintEnd_toEndOf="@id/action_hint_weekend"/>

    <ImageButton
            android:id="@+id/action_hint_hot_tickets"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="165dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/bg_rectangle_radius_small"
            android:backgroundTint="@color/red"
            android:src="@drawable/ic_fire_24dp"
            app:layout_constraintStart_toEndOf="@id/action_hint_weekend"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"/>

    <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:background="@color/transparent"
            android:text="Горячие билеты"
            android:textSize="14sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/action_hint_hot_tickets"
            app:layout_constraintTop_toBottomOf="@id/action_hint_hot_tickets"
            app:layout_constraintEnd_toEndOf="@id/action_hint_hot_tickets"/>

    <!--  Hint buttons END  -->

    <ImageView
            android:id="@+id/image_recommendation_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="285dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="-16dp"
            android:background="@drawable/bg_rectangle_radius_medium"
            android:backgroundTint="@color/gray_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/action_recommendation_3"/>

    <include
            android:id="@+id/action_recommendation_1"
            layout="@layout/layout_recommendation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toTopOf="@id/image_recommendation_background"
            app:layout_constraintStart_toStartOf="@id/image_recommendation_background"
            app:layout_constraintEnd_toEndOf="@id/image_recommendation_background"/>

    <include
            android:id="@+id/action_recommendation_2"
            layout="@layout/layout_recommendation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/action_recommendation_1"
            app:layout_constraintStart_toStartOf="@id/image_recommendation_background"
            app:layout_constraintEnd_toEndOf="@id/image_recommendation_background"/>

    <include
            android:id="@+id/action_recommendation_3"
            layout="@layout/layout_recommendation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/action_recommendation_2"
            app:layout_constraintStart_toStartOf="@id/image_recommendation_background"
            app:layout_constraintEnd_toEndOf="@id/image_recommendation_background"/>


</androidx.constraintlayout.widget.ConstraintLayout>